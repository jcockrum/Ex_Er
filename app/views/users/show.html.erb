<% title "User" %>
<table>
    <tr>
        <th>Username</th>
        <th>Email</th>
    </tr>
    <tr>
        <td><%= @user.username %></td>
        <td><%= @user.email %></td>
		<% if has_access?(@user.id)%>
			<td><%= link_to "Edit this Account", edit_user_path %></td>
		<%end%>
        <% if admin? %>
			<td><%= link_to "All Users", users_path %></td>
			<td><%= link_to "Remove this User", user_path, :confirm => 'Are you sure?', :method => :delete %></td>	
	<% end %>
    </tr>
</table>
