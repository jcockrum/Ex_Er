<%= form_for @user do |f| %>
	<%= f.error_messages %>
	<p><%= f.label :username %><br/><%= f.text_field :username %></p>
	<p><%= f.label :email, "Email Address" %><br/><%= f.text_field :email %></p>
	<p><%= f.label :password %><br/><%= f.password_field :password %></p>
	<p><%= f.label :password_confirmation, "Confirm Password" %><br/><%= f.password_field :password_confirmation %></p>
	<% if signed_in? %>
		<%if admin?%>
			<p><%= f.label :is_admin %><br/><%= f.check_box :is_admin %></p>
		<%end%>
	<%end%>
	<p><%= f.submit (@user.new_record? ? "Sign up" : "Update") %></p>
<% end %>
